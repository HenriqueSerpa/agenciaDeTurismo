@using Microsoft.AspNetCore.Http;
@model  PacotesTuristicos
@{
    ViewData ["Title"] = "Alterar pacote turístico";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="AlterarPacote" method="post">
    <p>
        <label asp-for="Nome">Nome: </label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="Origem">Origem: </label>
        <input asp-for="Origem">
    </p>
    <p>
        <label asp-for="Destino">Destino: </label>
        <input asp-for="Destino">
    </p>
    <p>
        <label asp-for="Atrativos">Atrativos: </label>
        <textarea asp-for="Atrativos" cols="30" rows="10"></textarea>
    </p>
    <p>
        <label asp-for="Saida">Saída: </label>
        <input asp-for="Saida" type="date">
    </p>
    <p>
        <label asp-for="Retorno">Retorno: </label>
        <input asp-for="Retorno" type="date">
    </p>
    <p>
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Atualizar">
    </p>
</form>